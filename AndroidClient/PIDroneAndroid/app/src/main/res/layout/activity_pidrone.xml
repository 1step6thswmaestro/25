<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PIDroneActivity">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imgbtn_control"
        android:src="@drawable/icn_controller"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imgbtn_setting"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imgbtn_control"
        android:layout_marginStart="29dp"
        android:src="@drawable/icn_setting" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imgbtn_level"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imgbtn_setting"
        android:layout_marginStart="29dp"
        android:src="@drawable/icn_scale"
        android:scaleType="fitStart" />
</RelativeLayout>
